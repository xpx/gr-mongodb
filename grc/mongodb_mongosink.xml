<?xml version="1.0"?>
<block>
  <name>mongosink</name>
  <key>mongodb_mongosink</key>
  <category>mongodb</category>
  <import>import mongodb</import>
  <make>mongodb.mongosink($delay, $hist_samp)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Delay</name>
    <key>delay</key>
    <type>int</type>
  </param>
  <param>
    <name>History</name>
    <key>hist_samp</key>
    <type>int</type>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>trigger</name>
    <type>byte</type>
  </sink>
  <sink>
    <name>samples</name>
    <type>float</type>
  </sink>
  <sink>
    <name>msg_bit</name>
    <type>byte</type>
  </sink>
  </block>
